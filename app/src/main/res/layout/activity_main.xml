<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/tic_tac_toer">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/singly_linked"
        android:gravity="center_horizontal"
        android:text="@string/tic_tac_toe"
        android:textAlignment="center"
        android:textColor="@color/yellow_red"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <TextView
        android:id="@+id/winner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/singly_linked"
        android:gravity="center"
        android:text="Player X Turn"
        android:textColor="@color/red_yellow"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.252" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/reset_button"
        app:layout_constraintTop_toBottomOf="@+id/winner_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.55"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="20dp">
            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:background="@color/yellow_red"
                android:textColor="@color/red_yellow"
                android:fontFamily="@font/singly_linked_family"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/button21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:background="@color/yellow_red"
                android:textColor="@color/red_yellow"
                android:fontFamily="@font/singly_linked_family"
                android:textAlignment="center"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/button31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:background="@color/yellow_red"
                android:textColor="@color/red_yellow"
                android:fontFamily="@font/singly_linked_family"
                android:textAlignment="center"
                android:textSize="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="20dp">
            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:background="@color/yellow_red"
                android:textColor="@color/red_yellow"
                android:fontFamily="@font/singly_linked_family"
                android:textAlignment="center"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/button22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:background="@color/yellow_red"
                android:textColor="@color/red_yellow"
                android:fontFamily="@font/singly_linked_family"
                android:textAlignment="center"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/button32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:background="@color/yellow_red"
                android:textColor="@color/red_yellow"
                android:fontFamily="@font/singly_linked_family"
                android:textAlignment="center"
                android:textSize="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="3dp">
            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:background="@color/yellow_red"
                android:textColor="@color/red_yellow"
                android:fontFamily="@font/singly_linked_family"
                android:textAlignment="center"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/button23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                android:background="@color/yellow_red"
                android:textColor="@color/red_yellow"
                android:fontFamily="@font/singly_linked_family"
                android:textAlignment="center"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/button33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/yellow_red"
                android:paddingBottom="50dp"
                android:textColor="@color/red_yellow"
                android:fontFamily="@font/singly_linked_family"
                android:textAlignment="center"
                android:textSize="30dp"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/yellow_red"
        android:fontFamily="@font/singly_linked"
        android:text="RESET GAME"
        android:textColor="@color/red_yellow"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/winner_name"
        app:layout_constraintVertical_bias="0.91" />


</androidx.constraintlayout.widget.ConstraintLayout>